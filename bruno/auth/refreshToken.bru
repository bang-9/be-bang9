meta {
  name: refreshToken
  type: http
  seq: 3
}

post {
  url: {{BASE_URL}}/v1/auth/refresh
  body: json
  auth: inherit
}

body:json {
  {
    "refreshToken": "{{refreshToken}}"
  }
}

script:post-response {
  bru.setEnvVar("accessToken",res.getBody().result.accessToken);
  bru.setEnvVar("refreshToken",res.getBody().result.refreshToken);
}

settings {
  encodeUrl: true
}
